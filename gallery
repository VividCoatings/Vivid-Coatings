<div class="gallery-grid">
  <a href="images/firearm1.jpg" class="lightbox">
    <img src="images/firearm1.jpg" alt="Cerakote Firearm">
  </a>
  <a href="images/auto1.jpg" class="lightbox">
    <img src="images/auto1.jpg" alt="Ceramic Coated Car Part">
  </a>
  <!-- Add more images as needed -->
<script>
  const links = document.querySelectorAll('.lightbox');
  const overlay = document.createElement('div');
  overlay.className = 'lightbox-overlay';
  document.body.appendChild(overlay);

  links.forEach(link => {
    link.addEventListener('click', e => {
      e.preventDefault();
      const img = document.createElement('img');
      img.src = link.href;
      overlay.innerHTML = '';
      overlay.appendChild(img);
      overlay.style.display = 'flex';
    });
  });

  overlay.addEventListener('click', () => {
    overlay.style.display = 'none';
  });
</script>

</div>
